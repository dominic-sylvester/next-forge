{
  "name": "next-forge",
  "version": "5.3.2",
  "bin": {
    "next-forge": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "translate": "turbo translate",
    "boundaries": "turbo boundaries",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "cpd": "jscpd --config .jscpd.json",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "docs:generate": "typedoc",
    "bump-deps": "npx npm-check-updates --deep -u -x recharts && pnpm install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system",
    "migrate": "cd packages/database && npx prisma format && npx prisma generate && npx prisma db push",
    "clean": "git clean -xdf node_modules",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "pnpm check --write"
    ]
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.6",
    "@biomejs/biome": "2.3.14",
    "@playwright/test": "^1.50.1",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.6.3",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "knip": "^5.44.0",
    "lint-staged": "^15.4.3",
    "tsup": "^8.5.1",
    "turbo": "^2.6.3",
    "typedoc": "^0.27.6",
    "typescript": "^5.9.3",
    "ultracite": "6.3.9",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.2"
  },
  "pnpm": {
    "overrides": {
      "parse5": "^7.2.1"
    }
  },
  "type": "module"
}
